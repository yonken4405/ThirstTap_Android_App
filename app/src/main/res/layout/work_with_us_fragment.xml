                <TextView
                    android:layout_marginLeft="24dp"
                    android:fontFamily="@font/nunito_medium"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="practices and water conservation initiatives to enhance your business’s environmental responsibility."/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_margin="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bullet_ic_24"/>
                    <TextView
                        android:layout_marginLeft="3dp"
                        android:fontFamily="@font/nunito_bold"
                        android:textColor="@color/josiahBlack"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customer Support: "/>

                    <TextView
                        android:fontFamily="@font/nunito_medium"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reliable assistance and"/>
                </LinearLayout>
                <TextView
                    android:layout_marginLeft="24dp"
                    android:fontFamily="@font/nunito_medium"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="feedback mechanisms to ensure your operations run smoothly and your customers are satisfied."/>
            </LinearLayout>

            <LinearLayout
